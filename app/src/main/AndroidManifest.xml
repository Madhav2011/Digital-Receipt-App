<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digitalreceipt.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mobilereceipt"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mobilereceipt"
        android:supportsRtl="true"
        android:theme="@style/Theme.LayoutDemo1">
        <activity android:name=".productdetails"
            android:label="Product Details"
            android:parentActivityName=".homepage1"
            android:theme="@style/Theme.withactionbar"></activity>
        <activity
            android:name=".Categorypage"
            android:label="Categories"
            android:theme="@style/Theme.withactionbar" />
        <activity
            android:name=".ContactUsPage"
            android:label="Contact Us"
            android:parentActivityName=".SettingPage"
            android:theme="@style/Theme.withactionbar" />
        <activity
            android:name=".AboutUsPage"
            android:parentActivityName=".SettingPage"
            android:label="About Us"
            android:theme="@style/Theme.withactionbar" />
        <activity
            android:name=".SettingPage"
            android:label="Settings"
            android:theme="@style/Theme.withactionbar" />
        <activity
            android:name=".ProductForm"
            android:label="Add New Receipt"
            android:parentActivityName=".homepage1"
            android:theme="@style/Theme.withactionbar" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".homepage1"
            android:theme="@style/Theme.withactionbar" />
        <activity android:name=".Registerpage" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>